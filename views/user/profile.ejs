<%- include('../partials/header.ejs') -%>
<%- include('../partials/navbar.ejs') -%>

    <div class="container">
        <div class="row mt-5">
            <div class="col-md-3">
                <img src="<%= '/images/' + user.avatar%>" alt="user-profile" id="profile"/>
            </div>
             <div class="col-md-8">
                 <h2 class="display-4">Profile</h2> 
                 <hr>        
                 <%- include('../partials/flashMessages.ejs') -%>
                 <p>
                     <% if (user) { %>
                        Welcome .. Your email <%= user.email %>
                     <% } %>   
                 </p>
                 <form action="/users/uploadAvatar" method="POST" enctype="multipart/form-data">
                   <input type="file" name="avatar" id="avatar" onchange="readURL(this)" />
                   <button type="submit" class="btn btn-primary">Upload</button>
                 </form>
                 <hr>
                 <h1 class="display-4">image preview</h1>
                 <img src="#" alt="image-inHold" id="imagePlaceholder" height="300px" width="300px" style="display: none;" />
             </div>
        </div>
    </div>

<%- include('../partials/footer.ejs') -%>